{
	"manifest_version": 3,
	"name": "Smart Tab Grouper",
	"version": "1.0.0",
	"description": "Automatically group tabs by domain or custom rules with configurable colors",
	"permissions": ["tabs", "tabGroups", "storage", "activeTab"],
	"background": {
		"service_worker": "background.js"
	},
	"action": {
		"default_popup": "popup.html",
		"default_title": "Smart Tab Grouper"
	},
	"options_page": "options.html",
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}
